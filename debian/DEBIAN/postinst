#!/bin/bash
# Post-installation script for fixpart package

set -e

# Make sure the binary is executable
chmod +x /usr/bin/fixpart

# Update man page database if mandb is available
if command -v mandb >/dev/null 2>&1; then
    mandb >/dev/null 2>&1 || true
fi

echo "fixpart installed successfully!"
echo "Run 'sudo fixpart' to repair partitions."

